---
import {Image} from "astro:assets";
import AvitoIcon from '../assets/avito.svg';

const {description, image, icon, position} = Astro.props
const IconsMap: Record<string, any> = {
    avito: AvitoIcon,
} as const
const IconComponent = IconsMap[icon]

---
<div class="flex flex-col gap-8 items-center justify-center text-xl">
    <Image src={image} class="object-cover object-center max-w-4xl w-full" alt="First Case"/>
    <div class="pl-28">
        <p class="tracking-[3.5%] leading-tight max-w-xl mb-5">{description}</p>
        <div class="flex gap-1.5 items-center leading-tight tracking-[3.5%] text-[#C2C2C2]">
            <IconComponent />
            {position}
        </div>
    </div>
</div>
